<%= form_with model: @user, url: users_path, local: true do |form| %>
    <div class="form-group">
      <h1 class="text-center">ユーザー登録</h1>
    </div>
  
    <div class="form-group">
      <%= form.label :username, 'ユーザー名' %>
    </div>
    <div class="form-group">
      <%= form.text_field :username, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :email, 'メールアドレス' %>
    </div>
    <div class="form-group">
      <%= form.email_field :email, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :password, 'パスワード' %>
    </div>
    <div class="form-group">
      <%= form.password_field :password, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :password_confirmation, 'パスワード(確認用)' %>
    </div>
    <div class="form-group">
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>  
  
    <div class="form-group">
    </div>
  <div class="form-group">
    <%= form.label :start_date, '禁煙開始日' %>
    <%= form.datetime_local_field :start_date, class: 'form-control' %>
  </div>
  
    <div class="form-group text-center">
      <%= form.submit '登録する', class: 'btn btn-primary' %>
    </div>

    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーが保存を阻止しました：</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  
<% end %>
  