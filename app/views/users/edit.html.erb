<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center">ユーザー情報編集</h1>
      <%= form_with(model: @user, local: true) do |form| %>
        <div class="form-group">
          <div>
            <%= form.label :username, 'ユーザー名' %>
          </div>
          <div>
            <%= form.text_field :username, class: 'form-control' %>
          </div>
        </div>
      
        <div class="form-group">
          <div>
            <%= form.label :email, 'メールアドレス' %>
          </div>
          <div>
            <%= form.email_field :email, class: 'form-control' %>
          </div>
        </div>
      
        <div class="form-group">
          <div>
            <%= form.label :reminder_time, 'リマインダー時間' %>
          </div>
          <div>
            <%= form.datetime_select :reminder_time, class: 'form-control' %>
          </div>
        </div>
        
        <%= form.fields_for :smoking_data do |smoking_data_fields| %>
          <div class="form-group">
            <div>
              <%= smoking_data_fields.label :start_date, '禁煙開始時間' %>
            </div>
            <div>
              <%= smoking_data_fields.datetime_select :start_date, class: 'form-control' %>
            </div>
          </div>
        
          <div class="form-group">
            <div>
              <%= smoking_data_fields.label :cigarettes_per_day, '1日あたりの喫煙本数' %>
            </div>
            <div>
              <%= smoking_data_fields.number_field :cigarettes_per_day, class: 'form-control' %>
            </div>
          </div>
        
          <div class="form-group">
            <div>
              <%= smoking_data_fields.label :price_per_pack, '1パックの価格' %>
            </div>
            <div>
              <%= smoking_data_fields.number_field :price_per_pack, class: 'form-control' %>
            </div>
          </div>
        <% end %>
      
        <div class="form-group text-center">
          <%= form.submit '更新する', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
